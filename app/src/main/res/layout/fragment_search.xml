<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.SearchFragment">

    <ImageView
        android:id="@+id/scanIconImageView"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_above="@+id/scanPromptTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="180dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="-4dp"
        android:src="@drawable/camera_icon"
        android:visibility="invisible"
        tools:visibility="visible"
        />
    <TextView
        android:id="@+id/scanPromptTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="148dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="10dp"
        android:text="Scan Barcode"
        android:textAlignment="center"
        android:visibility="invisible"
        tools:visibility="visible" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchItemsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="534dp"
        android:layout_above="@+id/searchPromptTextView"
        android:layout_below="@+id/editTextSearch"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp" />

    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/background_edit_text"
        android:drawableRight="@drawable/search_icon_edittext"
        android:ems="10"
        android:textColor="@color/black"
        android:inputType="textPersonName" />
    <TextView
        android:id="@+id/searchPromptTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/orPromptTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="5dp"
        android:textAlignment="center" />
    <TextView
        android:id="@+id/orPromptTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/scanIconImageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="2dp"
        android:text="OR"
        android:textAlignment="center"
        android:visibility="invisible"
        tools:visibility="visible" />
</RelativeLayout>

